{
  "name": "hbs-cli",
  "version": "0.0.0-development",
  "description": "A CLI tool for rendering Handlebars templates",
  "homepage": "http://github.com/keithamus/hbs-cli/issues",
  "bugs": "http://github.com/keithamus/hbs-cli/issues",
  "license": "MIT",
  "author": "Keith Cirkel (http://keithcirkel.co.uk)",
  "files": [
    "lib/*.js"
  ],
  "main": "lib/index.js",
  "bin": {
    "hbs": "lib/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/keithamus/hbs-cli.git"
  },
  "scripts": {
    "lint": "eslint src test --ignore-path .gitignore",
    "prepublish": "babel src -d lib",
    "pretest": "npm run lint",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "npm run test:run:1 && npm run test:verify:1 && npm run test:run:2 && npm run test:verify:2",
    "test:run:1": "node . -H ./test/times.js -D ./test/data.json -o test test/test-1.hbs",
    "test:verify:1": "diff test/test-1.html test/verify-1.html",
    "test:run:2": "node . -s -H ./test/times.js -D ./test/data.json test/test-1.hbs > test/test-2.html",
    "test:verify:2": "diff test/test-2.html test/verify-1.html",
    "watch": "npm run prepublish -- -w"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "npm test"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-stage-2",
        {
          "loose": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-transform-runtime"
      ]
    ],
    "compact": false,
    "ignore": [
      "node_modules"
    ],
    "retainLines": true
  },
  "eslintConfig": {
    "extends": "strict",
    "parser": "babel-eslint",
    "rules": {
      "array-element-newline": 0,
      "id-blacklist": 0,
      "no-console": 0,
      "no-process-exit": 0,
      "no-return-assign": 0,
      "no-return-await": 0,
      "prefer-arrow-callback": 0,
      "template-curly-spacing": 0
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.8.3",
    "debug": "^2.2.0",
    "fs-promise": "^0.3.1",
    "glob-promise": "^1.0.4",
    "handlebars": "^4.0.5",
    "lodash.merge": "^4.6.2",
    "minimist": "^1.2.0",
    "mkdirp-then": "^1.2.0",
    "resolve": "^1.1.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-stage-2": "^7.8.3",
    "babel-eslint": "^9.0.0",
    "eslint": "^6.8.0",
    "eslint-config-strict": "^14.0.1",
    "eslint-plugin-filenames": "^1.3.2",
    "ghooks": "^1.0.1",
    "marked": "^0.7.0",
    "semantic-release": "^16.0.2",
    "travis-after-all": "^1.4.4",
    "validate-commit-msg": "^2.8.2"
  }
}
